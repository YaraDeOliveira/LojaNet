@model LojaNetF.Models.Produto

@{
    ViewBag.Title = "Incluir";
}

<h2>Incluir</h2>


<form method="post" class="form-horizontal">

    @Html.ValidationSummary(null, new { @class = "text-danger" })

    <div class="form-group">
        <label class="control-label" for="Nome">Nome: </label>
        <input class="form-control" type="text" name="Nome" value="@Model.Nome" />
    </div>

    <div class="form-group">
        <label class="control-label" for="Preco">Preço: </label>
        <input class="form-control" type="text" name="Preco" value="@Model.Preco" />
        @*@Html.EditorFor(model => model.Preco, new { htmlAttributes = new { @class = "form-control" } })*@
    </div>

    <div class="form-group">
        <label class="control-label" for="Estoque">Estoque: </label>
        <input class="form-control" type="text" name="Estoque" value="@Model.Estoque" />
    </div>

    <div class="form-group">
        <input class="btn btn-dark" type="submit" value="Gravar" />
    </div>

</form>

<div>
    <a href="/Produto/Index" class="btn btn-dark">Voltar</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
